# Moving
bind left:ctrl,cmd,shift nudge -2% +0
bind right:ctrl,cmd,shift nudge +2% +0
bind up:ctrl,cmd,shift nudge +0 -2%
bind down:ctrl,cmd,shift nudge +0 +2%

# Resizing
bind left:ctrl,alt,cmd,shift resize -10% +0
bind right:ctrl,alt,cmd,shift resize +10% +0
bind up:ctrl,alt,cmd,shift resize +0 -10%
bind down:ctrl,alt,cmd,shift resize +0 +10%

# Sizes
bind left:ctrl,alt,cmd push left bar-resize:screenSizeX/2
bind right:ctrl,alt,cmd push right bar-resize:screenSizeX/2
bind up:ctrl,alt,cmd push up bar-resize:screenSizeY
